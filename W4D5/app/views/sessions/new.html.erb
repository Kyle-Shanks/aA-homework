<h1 class="centered">- Log in -</h1>

<form class="rela-block card" action="<%= session_url %>" method="post">
  <%= auth_token %>

  <div class="card-section">
    <label for="user_username_email">Username/Email Address</label>
    <input id="user_username_email" type="text" name="user[name_or_email]">
    <br>

    <label for="user_password">Password</label>
    <input id="user_password" type="password" name="user[password]">
    <br>

    <input class="button" type="submit" value="Log in">
  </div>

  <a class="button" href="<%= new_user_url %>">Sign Up</a>
</form>

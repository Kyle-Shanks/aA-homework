<h1 class="centered">- Sign up -</h1>

<form class="rela-block card" action="<%= users_url %>" method="post">
  <%= auth_token %>

  <div class="card-section">
    <label for="user_username">Username: </label>
    <input id="user_username" type="text" name="user[username]">
    <br>

    <label for="user_email">Email: </label>
    <input id="user_email" type="text" name="user[email]">
    <br>

    <label for="user_password">Password: </label>
    <input id="user_password" type="password" name="user[password]">
    <br>

    <input class="button" type="submit" value="Sign up">
  </div>

  <a class="button" href="<%= new_session_url %>">Log In</a>
</form>

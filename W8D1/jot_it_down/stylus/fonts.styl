// main: _main.styl

p
  font-size 16px
  line-height 20px

h1
  font-size 44px
  line-height 54px
  margin-bottom 20px
  font-family: 'Quicksand', Helvetica, sans-serif

h2
  font-size 32px
  line-height 40px
  margin-bottom 20px
  font-family: 'Quicksand', Helvetica, sans-serif

h3
  font-size 20px
  text-transform uppercase
  line-height 28px
  margin-bottom 10px

a
  text-decoration none
  color $dark-grey
  margin 0 10px
  &:hover
    color $green
  &.thick
    text-transform uppercase
    letter-spacing 1px
    font-weight 700
  &.outline
    border 1px solid
    border-radius 3px
    padding 5px 18px
  &.green
    color $green
    &:hover
      color $light-green
